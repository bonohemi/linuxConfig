# Append our default paths
appendpath () {
    case ":$PATH:" in
        *:"$1":*)
            ;;
        *)
            #PATH="$1:${PATH:+$PATH}"
            PATH="$1:${PATH}"
    esac
}

if [ -d ~/app/java ]; then
    JAVA_HOME=~/app/java
    #PATH=${JAVA_HOME}/bin:$PATH
    appendpath "${JAVA_HOME}/bin"
fi

if [ -d ~/app/node ]; then
    NODE_HOME=~/app/node
    #PATH=${NODE_HOME}/bin:$PATH
    appendpath "${NODE_HOME}/bin"
fi

